#include <Servo.h>
 
#define mainArm 0
#define jib 1
#define bucket 2
#define slew 3
 
Servo servo[4];
 
byte angle[4] = {90, 90, 90, 90};
 
byte potPin[4] = {A0, A1, A2, A3};
byte servoPin[4] = {12, 11, 6, 5};
 
void setup() {
 
  Serial.begin(9600);
  Serial.println("Starting DiggerCode.ino");
 
 
  for (byte n = 0; n < 4; n++) {
    servo[n].attach(servoPin[n]);
  }
}
 
void loop() {
  readPotentiometers();
  moveServos();
  delay(10);
}
 
void readPotentiometers() {
  int potVal;
  for (byte n = 0; n < 4; n++) {
    potVal = analogRead(potPin[n]);
   
    if (potVal < 450) {
      angle[n] += 5;      
    }
   
    if (potVal > 570) {
      angle[n] -= 5;
    }
   angle[n]= constrain(angle[n],10,170);
 
  }
}
 
void moveServos() {
  for (byte n = 0; n < 4; n++) {
    servo[n].write(angle[n]);
  }
}
